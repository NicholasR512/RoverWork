                <section class="section-4">
                    <div class="container-6">
                        <div class="faq" data-aos="zoom-in" data-aos-duration="750">
                            <div class="faq-top">
                                <div class="q">
                                    <h4>Is this platform free for students?</h4>
                                </div>
                                <div class="arrow">
                                    <button id="arrow-btn" onclick="magic(this)">&#9660;</button>
                                </div>
